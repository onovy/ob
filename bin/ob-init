#!/bin/bash -e

echo "tmpfs /tmp tmpfs nodev,nosuid 0 0" | sudo tee -a /etc/schroot/sbuild/fstab
echo "/var/cache/apt/archives /var/cache/apt/archives none rw,bind 0 0" | sudo tee -a /etc/schroot/sbuild/fstab

# unstable amd64
sudo sbuild-createchroot --include=eatmydata,ccache unstable /srv/chroot/unstable-amd64-sbuild https://deb.debian.org/debian
echo "command-prefix=eatmydata" | sudo tee -a /etc/schroot/chroot.d/unstable-amd64-*

# stretch amd64
sudo sbuild-createchroot --include=eatmydata,ccache stretch /srv/chroot/stretch-amd64-sbuild https://deb.debian.org/debian
echo "command-prefix=eatmydata" | sudo tee -a /etc/schroot/chroot.d/stretch-amd64-*

# jessie amd64
sudo sbuild-createchroot --include=eatmydata,ccache jessie /srv/chroot/jessie-amd64-sbuild https://deb.debian.org/debian
echo "command-prefix=eatmydata" | sudo tee -a /etc/schroot/chroot.d/jessie-amd64-*
